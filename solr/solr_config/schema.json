{
    "add-field-type": [
        {
            "name":"text",
            "class":"solr.TextField"
        },
        {
            "name":"int",
            "class":"TrieIntField"
        },
        {
            "name": "float",
            "class": "TrieFloatField"
        },
        {
            "name": "date",
            "class": "solr.TrieDateField"
        },
        {
            "name": "comma-separated-list",
            "class": "solr.TextField",
            "indexAnalyzer" : {
                "tokenizer": {
                    "class":"solr.SimplePatternTokenizerFactory", 
                    "pattern": "[^. ;]+" 
                },
                "filters": [
                    {"class":"solr.PatternReplaceFilterFactory", 
                    "pattern":"([^a-zA-Z0-9-'])", "replacement":""},
                    {"class": "solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class":"solr.SimplePatternTokenizerFactory", 
                    "pattern": "[^. ;]+" 
                },
                "filters":[
                    {"class":"solr.PatternReplaceFilterFactory", 
                        "pattern":"([^a-zA-Z0-9-'])", "replacement":""},
                    {"class": "solr.LowerCaseFilterFactory"}
                ]
            }
        }, 
        {
            "name": "authors",
            "class": "solr.TextField",
            "indexAnalyzer" : {
                "tokenizer": {
                    "class":"solr.SimplePatternTokenizerFactory", 
                    "pattern": "[^ ;]+" 
                },
                "filters": [
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class":"solr.PatternReplaceFilterFactory", 
                    "pattern":"([^a-zA-Z0-9-'])", "replacement":""}
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class":"solr.SimplePatternTokenizerFactory"},
                "filters":[
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class":"solr.PatternReplaceFilterFactory", 
                        "pattern":"([^a-z0-9-'])", "replacement":""},
                    {"class": "solr.ShingleFilterFactory", "maxShingleSize":4}
                ]
            }
        },
        {
            "name": "description",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[  
                    {"class":"solr.SynonymGraphFilterFactory",
                        "expand":"true",
                        "ignoreCase":"true",
                        "synonyms":"synonyms.txt"
                    }, 
                    {"class":"solr.FlattenGraphFilterFactory"},
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.EnglishMinimalStemFilterFactory"}
                ]
            }, 
            "queryAnalyzer": {
                "tokenizer": {
                    "class":"solr.StandardTokenizerFactory"
                }, 
                "filters":[
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.EnglishMinimalStemFilterFactory"}
                ]
            }
        },
        {
          "name": "title",
          "class": "solr.TextField",
          "indexAnalyzer": {
                "tokenizer": {
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[  
                    {"class": "solr.LowerCaseFilterFactory"}
                ]
          }, 
          "queryAnalyzer": {
                "tokenizer": {
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[  
                    {"class": "solr.LowerCaseFilterFactory"}
                ]
          }
        },
        {
            "name": "review",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[ 
                    {"class":"solr.SynonymGraphFilterFactory",
                        "expand":"true",
                        "ignoreCase":"true",
                        "tokenizerFactory":"solr.StandardTokenizerFactory",
                        "synonyms":"synonyms.txt"
                    },  
                    {"class":"solr.FlattenGraphFilterFactory"},                    
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.PorterStemFilterFactory"},
                    {"class": "solr.EnglishPossessiveFilterFactory"},
                    {"class": "solr.EnglishMinimalStemFilterFactory"}
                ]
            }, 
            "queryAnalyzer": {
                "tokenizer": {
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[  
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.PorterStemFilterFactory"},
                    {"class": "solr.EnglishPossessiveFilterFactory"},
                    {"class": "solr.EnglishMinimalStemFilterFactory"},
                    {"class": "solr.StopFilterFactory", "words":"stopwords.txt", "ignoreCase":true}
                ]
            }
          }
    ],


    "add-field": [
