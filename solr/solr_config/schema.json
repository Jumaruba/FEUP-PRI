            "indexed": false
        }, 
        {
            "name":"format",
            "type": "text",
            "indexed":false
        },
        {
            "name": "publisher",
            "type": "text",
            "indexed": true
        },
        {
            "name": "date",
            "type": "date",
            "indexed": true
        },
        { 
            "name": "description", 
            "type": "description",
            "indexed": true
        }, 
        {
            "name": "isbn",
            "type": "text",
            "indexed": false
        },
        {
            "name": "genres",
            "type": "comma-separated-list",
            "indexed":true
        }, 
        {
            "name": "authors",
            "type": "authors",
            "indexed": true
        },
        {
            "name": "series",
            "type": "comma-separated-list",
            "indexed":true
        },  
        {
            "name": "average_rating",
            "type": "float",
            "indexed": true
        },
        {
            "name": "review_id",
            "type": "text",
            "indexed": false
        },
        {
            "name": "rating",
            "type": "float",
            "indexed": true
        },
        {
            "name": "review_text",
